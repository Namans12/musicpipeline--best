{
  "name": "audio-pipeline",
  "version": "1.0.0",
  "description": "Automated audio file organization and metadata correction pipeline",
  "main": "dist/main/index.js",
  "scripts": {
    "build": "tsc && node -e \"require('fs').cpSync('src/renderer/index.html','dist/renderer/index.html')\"",
    "dev": "tsc --watch",
    "start": "electron dist/main/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/ tests/ --ext .ts,.tsx",
    "lint:fix": "eslint src/ tests/ --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "package": "electron-builder --win",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "prestart": "electron-rebuild -f -w better-sqlite3",
    "pretest": "npm rebuild better-sqlite3"
  },
  "keywords": [
    "audio",
    "metadata",
    "id3",
    "fingerprinting",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "@types/better-sqlite3": "^7.6.13",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@vitest/coverage-v8": "^1.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "better-sqlite3": "^12.6.2",
    "music-metadata": "^7.14.0",
    "node-id3": "^0.2.6"
  },
  "build": {
    "appId": "com.audio-pipeline.app",
    "productName": "Audio Pipeline",
    "win": {
      "target": "nsis"
    },
    "directories": {
      "output": "release"
    }
  }
}
